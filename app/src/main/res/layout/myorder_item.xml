<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey"
    android:layout_margin="5dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order ID"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/orderId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PERUSNIA-e2b29516-50c7-4b09-8ea5-c1859a7de95f"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:gravity="bottom"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payment Method"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/payment_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bank Transfer"
                    android:textColor="@color/black"
                    android:ellipsize="end"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/gross_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp. 250,000"
                    android:textColor="@color/black"
                    android:ellipsize="end"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status Transaction"
                    android:ellipsize="end"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/transaction_status_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/grey">
                    <TextView
                        android:id="@+id/transaction_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Success"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:ellipsize="end"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
            <TextView
                android:id="@+id/transaction_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today, 09:16 am"
                android:gravity="right"/>
        </LinearLayout>
</androidx.cardview.widget.CardView>
    </FrameLayout>